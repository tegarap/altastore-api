    "schemas": {
      "CustomersSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Boboboy Pratama"
          },
          "email": {
            "type": "string",
            "example": "boboboy.pratama@gmail.com"
          },
          "gender": {
            "type": "string",
            "enum": ["male", "female"]
          },
          "password": {
            "type": "string",
            "example": "asdf123"
          }
        }
      },
      "SimpleCustomerSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Boboboy Pratama"
          },
          "email": {
            "type": "string",
            "example": "boboboypratama@gmail.com"
          },
          "gender": {
            "type": "string",
            "enum": ["male", "female"]
          }
        }
      },
      "ProductSchema": {
        "type": "object",
        "properties": {
          "product_name": {
            "type": "string",
            "example": "Sabun Wing"
          },
          "product_description": {
            "type": "string",
            "example": "ini adalah sabun wing"
          },
          "product_category": {
            "type": "string",
            "example": "alat mandi"
          },
          "product_quantity": {
            "type": "integer",
            "example": 10
          },
        }
      },
      "ArrayOfProductSchema": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/BookSchema"
        }
      },
      "RentSchema": {
        "type": "object",
        "required": ["book_id", "customer_id"],
        "properties": {
          "customer_id": {
            "type": "integer",
            "example": 15
          },
          "book_id": {
            "type": "number",
            "example": 12
          }
        }
      },
      "RentCustomerAndUserSchema": {
        "type": "object",
        "allOf": [
          { "$ref": "#/components/schemas/RentSchema" },
          {
            "type": "object",
            "properties": {
              "customer": {
                "$ref": "#/components/schemas/SimpleCustomerSchema"
              },
              "book": {
                "$ref": "#/components/schemas/BookSchema"
              }
            }
          }
        ]
      },
      "ArrayOfRentCustomerAndUserSchema": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/RentCustomerAndUserSchema"
        }
      }
    }
  }
}